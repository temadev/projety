extends ../layouts/main
block meta
  title Присоединиться к Projety
block content
  #block-page.content-block
    .container
      .row
        .col-md-8.col-md-offset-2
          .page-content
            .page-header
              h1 Присоединиться к Projety
            form#registerForm.form-horizontal(role='form', name='register-form')
              .form-group
                label.col-md-3.control-label(for='registerEmail') Email
                .col-md-6
                  input.form-control#registerEmail(type='email', name='email', placeholder='Email')
              .form-group
                label.col-md-3.control-label(for='registerPhone') Номер телефона
                .col-md-6
                  input.form-control#registerPhone(type='phone', name='phone', placeholder='Номер телефона')
              .form-group
                label.col-md-3.control-label(for='registerPassword') Пароль
                .col-md-6
                  input.form-control#registerPassword(type='password', name='password', placeholder='Придумайте пароль')
              hr
              .form-group
                label.col-md-3.control-label(for='firstname') Имя
                .col-md-6
                  input.form-control#firstname(type='text', name='firstname', placeholder='Имя')
              .form-group
                label.col-md-3.control-label(for='lastname') Фамилия
                .col-md-6
                  input.form-control#lastname(type='text', name='lastname', placeholder='Фамилия')
              hr
              .form-group
                label.col-md-3.control-label#captchaOperation
                .col-md-3
                  input.form-control(type='text', name='captcha')
              .form-group
                .col-md-offset-3.col-md-6
                  p: button.btn.btn-lg.btn-primary(type='submit') Зарегистрироваться
                  p.text-muted После того, как вы нажмете кнопку "Зарегистрироваться", вы автоматически соглашаетесь с нашими <a href="#">Условиями добровольного рабства</a>. Если вы еще не ознакомились с документом, то обязательнос сделайте это.
            span.help-block.error